<view class="container">
  <view class="input-box">
    <view class="section">
      <text>收货人</text>
      <input type="text" placeholder="姓名" maxlength="15" value="{{receiver}}" bindinput="getName"/>
    </view>
    
    <view class="section">
      <text>手机号码</text>
      <input type="number" placeholder="11位手机号码" maxlength="11" value="{{mobile}}" bindinput="getPhone"/>
    </view>

    <view class="section">
      <text>所在地区</text>
      <picker mode="region" bindchange="getRegion">
        北京市 市辖区 东城区
      </picker>
      <view class="arrow">
        <image src="/images/icon/more.png" mode=""/>
      </view>
    </view>

    <view class="section">
      <text>详细地址</text>
      <input type="text" placeholder="如楼号/单元/门牌号" maxlength="15" value="{{receiver}}"  bindinput="getDetailAddr"/>
    </view>
  
  </view>

<!-- 功能按钮 -->
  <view class="btn-box">
    <view class="keep btn" bind:tap="onSaveAddr" >
      <text>保存收获地址</text>
    </view>
    
    <view class="clear btn" bind:tap="onDeleteAddr" wx:if="{{addrId != 0}}">
      <text>删除收货地址</text>
    </view>

  </view>

</view>
















