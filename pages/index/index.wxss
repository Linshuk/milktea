.title {
    display: flex;
    flex-direction: row;
    align-items: center;
    /* padding: 0,100rpx; */
  }
  .title .tex {
    font-size: 17pt;
    font-weight: bold;
    /* padding: 20rpx 30rpx; */
    /* margin: 10rpx 0 0; */
    background-color:#fff;
    color: #c69e6d;
    text-align: center;
    height: 100rpx;
    /* padding:0rpx; */
    line-height: 100rpx;
    width: 50%;
  }
  
  
  
  /* 设置整个页面的背景色是浅灰色 */
  /* .container { */
    /* background-color: #f5f5f5; 浅灰色背景 */
  /* } */
  
  
  .title .java-img {
    height: 80rpx;
    width: 20%;
  }
  
  .recommend-title {
    font-size: 14pt;
    font-weight: bold;
    padding: 20rpx 30rpx;
    margin: 10rpx 0 0;
    color: #c69e6d;
  }
  
  .eachOne {
    text-align: center;
    /* width: 23%;  */
  
  }
  
  .swiperTop {
      height: 180px;
  }
  
  .bnr-img {
    width: 100%;
  }
  
  .recommend {
    width: 100%;
    height: 500rpx;
    margin-bottom: 30rpx;
    /* background-color: cadetblue; *//* 弹性布局 */
    display: flex;
    /* 换行 */
    flex-wrap: wrap;
    /* 设置元素的间距 *//* justify-content: space-around; */
    justify-content: space-between;
  }
  
  .refresh {
    display: flex;
    margin-left: 350rpx;
    margin-top: 35rpx;
  }
  
  .refresh text {
    font-size: 35rpx;
    margin-right: 10rpx;
    color: #c69e6d;
  }
  
  .refresh-img {
    height: 40rpx;
    width: 40rpx;
    text-align: right;
  }
  
  .rec-img {
    height: 150rpx;
    width: 150rpx;
    border-radius: 10rpx;
  }
  
  .rec-name {
    font-size: 25rpx;
    color: #0c0303;
  }
  
  .rec-price {
    color: #070503;
    width: 150rpx;
  }
  
  .recommend-bar {
    display: flex;
  }
  
  /* 分割线样式 */
  .divider {
    width: 100%;
    height: 2rpx;
    background-color: #e0e0e0; /* 浅灰色 */
    margin: 20rpx 0; /* 上下留白 */
  }
  /* 用户信息和优惠券样式 */
  .user-info {
    display: flex;
    align-items: center;
    margin-top: 20rpx;
    padding: 0 20rpx;
  }
  .user-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
  }
  .username {
    font-size: 36rpx;
    flex: 1;
  }
  .coupon-btn {
    background-color: #0b177e;
    color: #ffffff;
    padding: 10rpx 20rpx;
    border-radius: 20rpx;
    display: flex;
    height: 60rpx;
    justify-content: center;
    font-size: 20rpx;
  }
  
  /* 功能选项样式 */
  .options {
    display: flex;
    justify-content: space-around;
    margin-top: 30rpx;
  }
  .option {
    text-align: center;
    padding: 20rpx;
  }
  .option-img {
    width: 100rpx;
    height: 100rpx;
  }
  .option-text, .option-subtext {
    display: block;
  }
  .option-text {
    margin-top: 10rpx;
    font-size: 30rpx;
  }
  .option-subtext {
    font-size: 24rpx;
    color: #888888;
  }
  
  /* 其他功能按钮样式 */
  .extra-options {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 20rpx;
  }
  .extra-option {
    width: 22%;
    text-align: center;
    margin-bottom: 20rpx;
  }
  .extra-option-img {
    width: 80rpx;
    height: 80rpx;
  }
  .extra-option-text {
    /* margin-top: 10rpx; */
    display: block;
    font-size: 24rpx;  /* 较小的字体 */
  }
