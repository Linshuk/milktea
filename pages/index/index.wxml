<view class="container">
  <!-- 搜索框start -->
  <view class="bg-sear" bind:tap="gotoSeach">
    <view class="section">
      <image src="../../images/icon/search.png" class="search-img" />
      <text class="placeholder">搜索</text>
    </view>
  </view>
  <!-- 搜索框end -->


  <view class="content">
    <!-- 轮播图start -->
    <swiper autoplay="true" indicator-active-color="#1b7dec" indicator-color="#d1e5fb" interval="1500" duration="500" circular="true" previous-margin="20rpx" next-margin="20rpx" class="pic-swiper">
      <block wx:for="{{indexImgs}}" wx:key="imgUrl">
        <swiper-item class="banner-item">
          <view>
            <image src="{{item.imgUrl}}" class="banner" />
          </view>
        </swiper-item>
      </block>
    </swiper>
    <!-- 轮播图end -->

    <!-- 四个小标签start -->
    <view class="cat-item">
      <block wx:for="{{itemList}}" wx:key="id">
        <view class="item">
          <image src="{{item.imgUrl}}" />
          <text>{{item.tagName}}</text>
        </view>
      </block>
    </view>
  </view>
  <!-- 四个小标签end -->

  <!-- 公告start -->
  <view class="message-play">
    <image src="../../images/icon/horn.png" class="hornpng" />
    <swiper vertical="true" circular="true" autoplay="true" class="swiper-cont">
      <block wx:for="{{news}}">
        <swiper-item>
          {{item.title}}
        </swiper-item>
      </block>
    </swiper>
    <text class="arrow" bind:tap="gotoNoticeList"></text>
  </view>
  <!-- 公告end -->

  <block wx:for="{{tagList}}">

    <!-- 每日上新start -->
    <view class="up-to-date" wx:if="{{item.style == 2}}">
      <view class="title">
        <text>{{item.title}}</text>
        <view class="more-prod-cont">
          <text class="more">查看更多</text>
        </view>
      </view>

      <view class="item-cont">
        <!-- 遍历每日上新的商品数据 -->
        <block wx:for="{{item.prods}}" wx:for-item="prod" wx:key="prodId">
          <view class="prod-item" bind:tap="gotoDetail" data-prodid="{{prod.prodId}}">
            <view>
              <view class="imagecont">
                <image src="{{prod.pic}}" class="prodimg" />
              </view>
              <view class="prod-text">{{prod.prodName}}</view>
              <view class="price">
                <text class="symbol">￥</text>
                <text class="big-num">{{wxs.parsePrice(prod.price)[0]}}.</text>
                <text class="small-num">{{wxs.parsePrice(prod.price)[1]}}</text>
              </view>
            </view>
          </view>
        </block>
      </view>
    </view>
    <!-- 每日上新end -->

    <!-- 商城热卖start -->
    <view class="hot-sale" wx:if="{{item.style == 1}}">
      <view class="title">
        <text>{{item.title}}</text>
        <view class="more-prod-cont">
          <text class="more">更多</text>
          <text class="arrow"></text>
        </view>
      </view>

      <view class="hotsale-item-cont">
        <block wx:for="{{item.prods}}" wx:for-item="prod" wx:key="prodId">
          <view class="prod-items">
            <view class="hot-imagecont">
              <image src="{{prod.pic}}" class="hotsaleimg" />
            </view>

            <view class="hot-text">
              <view class="hotprod-text">{{prod.prodName}}</view>
              <view class="prod-info">{{prod.brief}}</view>
              <view class="prod-text-info">
                <view class="price">
                  <text class="symbol">￥</text>
                  <text class="big-num">{{wxs.parsePrice(prod.price)[0]}}.</text>
                  <text class="small-num">{{wxs.parsePrice(prod.price)[1]}}</text>
                </view>
                <image src="../../images/tabbar/basket-sel.png" class="basket-img" />
              </view>
            </view>
          </view>
        </block>
      </view>
    </view>
    <!-- 商城热卖end -->

    <!-- 更多宝贝start -->
    <view class="more-prod" wx:if="{{item.style == '0'}}">
      <view class="title">
        <text>{{item.title}}</text>
      </view>

      <view class="prod-show">
        <block wx:for="{{item.prods}}" wx:for-item="prod" wx:key="prodId">
          <view class="show-item">
            <view class="more-prod-pic">
              <image src="{{prod.pic}}" class="more-pic" />
            </view>

            <view class="prod-text-right">
              <view class="prod-text more">{{prod.prodName}}</view>
              <view class="prod-info">{{prod.brief}}</view>
              <view class="b-cart">
                <view class="price">
                  <text class="symbol">￥</text>
                  <text class="big-num">{{wxs.parsePrice(prod.price)[0]}}.</text>
                  <text class="small-num">{{wxs.parsePrice(prod.price)[1]}}</text>
                </view>
                <image src="../../images/tabbar/basket-sel.png" class="basket-img" />
              </view>


            </view>

          </view>



        </block>

      </view>


    </view>




    <!-- 更多宝贝end -->



  </block>

</view>

<wxs module="wxs" src="../../wxs/number.wxs"></wxs>