<!-- 外层的父布局 -->
<view class="container">
  <!-- 用户信息start -->
  <view class="userinfo">
    <view class="userinfo-avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="userinfo-name">
      <open-data type="userNickName"></open-data>
    </view>
  </view>
  <!-- 用户信息end -->

  <view class="list-cont">

  <!-- 我的订单start -->
    <view class="total-order">
      <view class="order-tit">
        <text style="font-weight: bold;">我的订单</text>
        <view class="checkmore">
          <text>查看全部</text>
          <text class="arrowhead"></text>
        </view>
      </view>

      <view class='procedure'>
        <view class='items' bind:tap="gotoOrderList" data-status="1">
          <image src='../../images/icon/toPay.png'></image>
          <text>待支付</text>
          <text class='num-badge' wx:if="{{orderAmount.unPay>0}}">{{orderAmount.unPay}}</text>
        </view>
        <view class='items' bind:tap="gotoOrderList"  data-status="2">
          <image src='../../images/icon/toPay.png'></image>
          <text>待发货</text>
          <text class='num-badge' wx:if="{{orderAmount.unPay>0}}">{{orderAmount.unPay}}</text>
        </view>

        <view class='items' bind:tap="gotoOrderList"  data-status="3">
          <image src='../../images/icon/toPay.png'></image>
          <text>待收货</text>
          <text class='num-badge' wx:if="{{orderAmount.unPay>0}}">{{orderAmount.unPay}}</text>
        </view>

        <view class='items' bind:tap="gotoOrderList"  data-status="5">
          <image src='../../images/icon/toPay.png'></image>
          <text>已完成</text>
          <text class='num-badge' wx:if="{{orderAmount.unPay>0}}">{{orderAmount.unPay}}</text>
        </view>
      </view>

    </view>
    <!-- 我的订单end -->

    <!-- 收藏、消息、足迹 -->
    <view class="prod-col">
      <view class="col-item" bindtap='myCollectionHandle' data-sts="5">
        <view class="num">{{collectionCount}}</view>
        <view class="tit">我的收藏</view>
      </view>

      <view class="col-item">
        <view class="num">{{msgCount}}</view>
        <view class="tit">我的消息</view>
      </view>

      <view class="col-item">
        <view class="num">{{historyCount}}</view>
        <view class="tit">我的足迹</view>
      </view>
    </view>
 <!-- 收藏、消息、足迹 -->

    <!-- 菜单列表 -->
    <view class="my-menu">
        <view class="memu-item">
            <view class="i-name">
              <image src="../../images/icon/promotion.png" />              
              <text>清楚缓存</text>
            </view>
            <text class="arrowhead"></text>
        </view>

        <view class="memu-item">
            <view class="i-name">
              <image src="../../images/icon/getCoupon.png" />              
              <text>活动中心</text>
            </view>
            <text class="arrowhead"></text>
        </view>

        <view class="memu-item">
            <view class="i-name">
              <image src="../../images/icon/myCoupon.png" />              
              <text>我的优惠券</text>
            </view>
            <text class="arrowhead"></text>
        </view>

        <view class="memu-item" bind:tap="gotoAddrList">
            <view class="i-name">
              <image src="../../images/icon/myAddr.png" />              
              <text>收货地址</text>
            </view>
            <text class="arrowhead"></text>
        </view>
    </view>
 <!-- 菜单列表 -->

    <view class="log-out" bind:tap="logout">
      <view class="log-out-n">
        <text>退出登录</text>
      </view>
    </view>


  </view>







</view>